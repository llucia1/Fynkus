        "\/api\/vx\/ip4": {
            "post": {
                "tags": [
                    "IP4"
                ],
                "summary": "Create a new IP4 Record",
                "description": "Create a new IP4 record with the provided data.",
                "operationId": "post_api_ip4_create",
                "parameters": [
                    {
                        "name": "ip",
                        "in": "query",
                        "description": "The IP address.",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "192.168.1.1"
                        }
                    },
                    {
                        "name": "userId",
                        "in": "query",
                        "description": "The user ID.",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    },
                    {
                        "name": "networkId",
                        "in": "query",
                        "description": "The network ID.",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 2
                        }
                    },
                    {
                        "name": "subnetId",
                        "in": "query",
                        "description": "The range ID.",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 3
                        }
                    }
                ],
                "requestBody": {
                    "description": "Provide the IP4 data to create a new IP4 record.",
                    "required": true,
                    "content": {
                        "application\/json": {
                            "schema": {
                                "$ref": "#\/components\/schemas\/CreateIP4Request"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "IP4 record created successfully.",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "properties": {
                                        "uuid": {
                                            "description": "The UUID of the created IP4 record.",
                                            "type": "string",
                                            "example": "a1b2c3d4-e5f6-g7h8-i9j0-k1l2m3n4o5p6"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid input data.",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "description": "Error message describing the validation issue.",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error.",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "description": "Error message describing the internal server error.",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "Bearer": []
                    }
                ]
            }
