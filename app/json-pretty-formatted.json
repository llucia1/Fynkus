    "components": {
        "schemas": {
            "CreateIP4Request": {
                "title": "Create IP4 Request",
                "description": "Request schema for creating a new IP4 record.",
                "required": [
                    "ip",
                    "userId",
                    "networkId",
                    "subnetId"
                ],
                "properties": {
                    "validator": {
                        "$ref": "#\/components\/schemas\/ValidatorInterface"
                    },
                    "ip": {
                        "description": "The IP address in IPv4 format.",
                        "type": "string",
                        "format": "ipv4",
                        "example": "192.168.1.1"
                    },
                    "userId": {
                        "description": "The user ID of the owner of this IP address.",
                        "type": "integer",
                        "minimum": 0,
                        "exclusiveMinimum": true,
                        "example": 1
                    },
                    "networkId": {
                        "description": "The network ID to which this IP address belongs.",
                        "type": "integer",
                        "minimum": 0,
                        "exclusiveMinimum": true,
                        "example": 2
                    },
                    "subnetId": {
                        "description": "The Subnet ID within the network where this IP address resides.",
                        "type": "integer",
                        "minimum": 0,
                        "exclusiveMinimum": true,
                        "example": 3
                    }
                },
                "type": "object"
            },
            "ValidatorInterface": {
                "type": "object"
            }
        },
        "securitySchemes": {
            "Bearer": {
                "type": "http",
                "bearerFormat": "JWE",
                "scheme": "bearer"
            }
        }
